  $(document).ready(function() {
  $(".department-card").click(async function() {
    const departmentId = $(this).attr("id"); // Extract department ID from card's ID
    
    try {
      // Send a POST request to the server with the department ID using Axios
      const response = await axios.post("/submit", { departmentId });
      // Handle the response as needed
      console.log(response.data); // Assuming the server responds with relevant data
    } catch (error) {
      console.error("Error:", error);
    }
  });
});
